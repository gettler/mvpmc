#!/usr/bin/python
#
# SConscript
#

import os

Import ('env')

mvp = env.Copy()
target = mvp['TARG']
toplevel = mvp['TOPLEVEL']

incdir = toplevel + '/dongle/install/' + target + '/include'

headers = [ 'cmyth.h', 'input.h', 'gw.h',
            'mvp_av.h', 'mvp_demux.h', 'mvp_osd.h', 'mvp_widget.h',
            'mvp_refmem.h', 'mvp_debug.h', 'mvp_atomic.h',
            'plugin.h', 'rfbproto.h',
            'vncviewer.h', 'tiwlan.h' ]

plugin_headers = [ 'plugin_gw.h' ]

inst = env.Install(incdir, [ headers, plugin_headers ])

Return('inst')
